<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="#DDCAFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BFACE2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HakOne_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="학원 이름"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <ImageButton
                android:id="@+id/Interest"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:enabled="true"
                android:contentDescription="Interest"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_star_outline_24"/>


                <!--
                android:background="@drawable/baseline_star_24"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_star_outline_24"
                -->





        </LinearLayout>


        <TextView
            android:id="@+id/Subject_list"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#D1BFFA"
            android:orientation="horizontal"
            android:text="  과목"
            android:padding="6dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/star_big_on" />

            <TextView
                android:id="@+id/avg_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="리뷰 점수"
                android:padding="3dp"/>
            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="7dp"
                android:text="점" />

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="리뷰 개수"
                android:padding="3dp"/>
            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="7dp"
                android:text="개" />

            <TextView
                android:id="@+id/avgTuition"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="월 평균 학원비" />

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="7dp"
                android:text="원" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
