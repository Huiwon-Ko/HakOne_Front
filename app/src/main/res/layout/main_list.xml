<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="#F2F8EB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#A5E4DF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HakOne_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="center|left"
                android:text="학원 이름" />

            <ImageButton
                android:id="@+id/Call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="true"
                android:layout_weight="0.1"
                android:icon="@drawable/ic_baseline_local_phone_24"
                android:contentDescription="Call"/>

            <ImageButton
                android:id="@+id/Interest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:contentDescription="Interest"
                android:enabled="true"
                android:icon="@drawable/ic_baseline_star_outline_24" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#85B5B8"
            android:padding="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject1"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/subject2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject2"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/subject3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject3"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/subject4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject4"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/subject5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject5"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/subject6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="subject6"
                android:background="@drawable/border"
                android:padding="4dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/star_big_on" />

            <TextView
                android:id="@+id/review_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:gravity="center|left"
                android:text="리뷰 점수" />

            <TextView
                android:id="@+id/review_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:gravity="center|left"
                android:text="리뷰 개수" />

            <TextView
                android:id="@+id/avgTuition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="월 평균 학원비" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
