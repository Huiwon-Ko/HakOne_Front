<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="#F2F8EB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A5E4DF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HakOne_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="학원 이름" />

            <ImageButton
                android:id="@+id/Call"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:enabled="true"
                android:contentDescription="Call"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_local_phone_24" />

            <ImageButton
                android:id="@+id/Interest"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:enabled="true"
                android:contentDescription="Interest"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_star_outline_24" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0"
            android:background="#85B5B8"
            android:padding="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject1"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/subject2"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub2"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/subject3"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub3"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/subject4"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/subject5"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub5"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginRight="3dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/subject6"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="sub6"
                android:gravity="center"
                android:background="@drawable/border"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/star_big_on" />

            <TextView
                android:id="@+id/review_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|left"
                android:text="리뷰 점수" />

            <TextView
                android:id="@+id/review_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|left"
                android:text="리뷰 개수" />

            <TextView
                android:id="@+id/avgTuition"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="월 평균 학원비" />

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="7dp"
                android:text="원" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
